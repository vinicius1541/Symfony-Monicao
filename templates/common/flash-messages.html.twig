{% if app.flashes is defined %}
    <div class="flash-messages">
		{% for message in app.flashes('success') %}
			<div class="alert alert-top alert-success d-flex align-items-center alert-dismissible fade show mb-3" role="alert">
				<span> {{ message }}</span>
				<button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		{% endfor %}
		{% for message in app.flashes('error') %}
			<div class="alert alert-top alert-danger d-flex align-items-center alert-dismissible fade show mb-3" role="alert">
				<span> {{ message }} </span>
				<button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		{% endfor %}
    </div>
{% endif %}